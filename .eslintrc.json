{
  "env": {
      "browser": true,
      "es6": true,
      "jest": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "parser": "babel-eslint",
  "plugins": [
      "react"
  ],
  "rules": {
      "indent": [
          "error",
          2
      ],
      "no-multiple-empty-lines": "error",
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ],
      "eqeqeq": [
        "error", "smart"
      ],
      "no-multi-spaces": "error",
      "comma-spacing": [
        "error", 
        { 
          "before": false, 
          "after": true 
        }
      ],
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error"
  },      
  "globals": {
    "require": true
  }
}


